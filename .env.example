# ============================================================================
# DJANGO SETTINGS
# ============================================================================
SECRET_KEY=your-secret-key-here-generate-a-secure-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# DATABASE - DEVELOPMENT (SQLite)
# ============================================================================
# En desarrollo, Django usa SQLite por defecto. No necesitas configurar nada aquí.

# ============================================================================
# DATABASE - PRODUCTION (PostgreSQL en Render)
# ============================================================================
# Render proporcionará la variable DATABASE_URL automáticamente
# Si la necesitas manualmente:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# ============================================================================
# PRODUCTION ONLY VARIABLES
# ============================================================================
DJANGO_SETTINGS_MODULE=config.settings.prod
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# CORS - Configurar con tus dominios
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio.com
